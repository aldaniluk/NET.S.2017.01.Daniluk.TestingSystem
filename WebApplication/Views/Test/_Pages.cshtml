@model WebApplication.Models.Paging.TestPreviewPagingViewModel

<ul class="pager">
    @for (int i = 1; i <= Model.PagingInfo.TotalPages; i++)
    {
        <li class="page-item">
            @Ajax.ActionLink(i.ToString(), "Search", new { page = i }, 
            new AjaxOptions { HttpMethod = "GET", OnSuccess = "testsModule.returnTests" }, 
            new { @class= "page-link pager__link pager__link-" + i, id = i })
        </li>
    }
</ul>
